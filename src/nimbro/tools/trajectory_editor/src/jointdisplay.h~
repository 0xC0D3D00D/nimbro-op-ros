#ifndef JOINTDISPLAY_H
#define JOINTDISPLAY_H

#include <QAbstractItemModel>

#include <motion_file/motionfile.h>

class JointEditor : public QAbstractListModel
{
Q_OBJECT
public:
	explicit JointEditor(QObject* parent = 0);
	virtual ~JointEditor();

	virtual QVariant data(const QModelIndex& index, int role = Qt::DisplayRole) const;
	virtual int rowCount(const QModelIndex& parent = QModelIndex()) const;

private:
	std::map<std::string, int>& jointMap;
	std::vector<motionfile::FrameJoint>& frames;
};


#endif